String.prototype.capitalizeEachWord = function() {
    let words = this.split(" ");
    for (var x = 0; x < words.length; x++) {
        let word = words[x];

        if (word.length <= 3) {
            continue;
        } else {
            sentence = sentence.replace(word[0], word[0].toUpperCase());
        }

    }
    return sentence;

}
